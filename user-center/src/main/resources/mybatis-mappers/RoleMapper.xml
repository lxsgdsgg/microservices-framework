<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.unicorn.usercenter.dao.SysRoleDao">

    <sql id="where">
        <where>
            <if test="name != null and name != ''">
                <bind name="_name" value="'%' + name + '%'"/>
                and t.name like #{_name}
            </if>
        </where>
    </sql>
    <select id="count" resultType="int">
        select count(*) from sys_role t
        <include refid="where"/>
    </select>

    <select id="findData" resultType="SysRole">
        select * from sys_role t
        <include refid="where"/>
        order by t.id desc
        <if test="start != null and start >= 0 and length != null and length > 0">
            limit #{start}, #{length}
        </if>
    </select>
</mapper>